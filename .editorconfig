# Use 2 spaces for .rb files
[*.rb]
indent_size = 2

# Use 2 spaces for JS files
[*.js]
indent_size = 2

# Use 2 spaces for CSS/SCSS files
[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Batch files use tabs for indentation
[*.bat]
indent_style = tab

[*.md]
trim_trailing_whitespace = false